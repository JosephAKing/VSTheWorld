@model VSTheWorld.ViewModels.ContactViewModel
@{
	ViewBag.Title = "Contact Page";
}
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <H1> Contact</H1>
        <form method="post">
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name">Name:</label><input class="form-control" asp-for="Name" type="text" />
                <span asp-for="Name" asp-validation-for="Name" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label><input class="form-control" asp-for="Email" type="email" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject">Subject:</label><input class="form-control" asp-for="Subject" type="text" />
                <span asp-validation-for="Subject" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message">Message:</label><textarea class="form-control" asp-for="Message" cols="40" rows="4"></textarea>
                <span asp-validation-for="Message" class="text-muted"></span>
            </div>
            <div class="form-group">
                <br /><input class="btn btn-success" type="submit" value="Submit" /><span>  </span><a asp-controller="App" asp-action="Index" class="btn btn-default">Cancel</a>

            </div>
                @if (ViewBag.Message != null)
            {
                    <div>@ViewBag.Message </div>
                }
        </form>
    </div>
</div>